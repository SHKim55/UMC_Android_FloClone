<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/song_list_number_tv"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="01"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/song_title_flag_tv"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/round_title_button"
        android:gravity="center"
        android:text="Title"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/song_list_number_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_list_singer_tv"
        android:visibility="visible" />

    <TextView
        android:id="@+id/song_list_title_tv"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:gravity="start"
        android:text="라일락"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/song_title_flag_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_list_singer_tv"/>

    <TextView
        android:id="@+id/song_list_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:gravity="start"
        android:text="아이유 (IU)"
        android:textSize="15sp"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toRightOf="@+id/song_list_number_tv"
        app:layout_constraintBottom_toBottomOf="@id/song_list_number_tv" />

    <ImageView
        android:id="@+id/song_list_more_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/song_list_number_tv"
        app:layout_constraintBottom_toBottomOf="@id/song_list_number_tv" />

    <ImageView
        android:id="@+id/song_list_play_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_play"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@id/song_list_more_iv"
        app:layout_constraintTop_toTopOf="@id/song_list_number_tv"
        app:layout_constraintBottom_toBottomOf="@id/song_list_number_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>