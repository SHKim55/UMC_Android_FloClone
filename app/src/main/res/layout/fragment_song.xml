<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/mix_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/favor_mix_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:text="내 취향 MIX"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/toggle_favor_mix_iv"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_toggle_off" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_select_all_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_select_all_tv"
                android:src="@drawable/btn_playlist_select_off" />

            <TextView
                android:id="@+id/btn_select_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/mix_layout"
                app:layout_constraintLeft_toRightOf="@id/btn_select_all_iv"
                android:text="전체선택"
                android:textColor="@color/grey"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/btn_listen_all_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:layout_constraintRight_toLeftOf="@id/btn_listen_all_tv"
                app:layout_constraintTop_toTopOf="@id/btn_select_all_tv"
                android:src="@drawable/icon_browse_arrow_right" />

            <TextView
                android:id="@+id/btn_listen_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/btn_select_all_tv"
                app:layout_constraintBottom_toBottomOf="@id/btn_select_all_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:text="전체듣기"
                android:textColor="@color/grey"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/song_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/btn_listen_all_iv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="@id/song_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/song_list_number_1_tv"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="01"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_title_flag_1_tv"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_title_button"
                        android:gravity="center"
                        android:text="Title"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_1_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/song_list_title_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="라일락"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toRightOf="@+id/song_title_flag_1_tv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_singer_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="아이유 (IU)"
                        android:textSize="15sp"
                        android:textColor="@color/grey"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_number_1_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_1_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_more"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_1_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_play"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toLeftOf="@id/song_list_more_1_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="@id/song_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/song_list_number_2_tv"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="02"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_title_flag_2_tv"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_title_button"
                        android:gravity="center"
                        android:text="Title"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_2_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/song_list_title_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="Flu"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toRightOf="@+id/song_title_flag_2_tv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_singer_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="아이유 (IU)"
                        android:textAllCaps="true"
                        android:textSize="15sp"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_2_tv"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_number_2_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_2_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_more"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_2_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_play"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toLeftOf="@id/song_list_more_2_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="@id/song_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/song_list_number_3_tv"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="03"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/song_title_flag_3_tv"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_title_button"
                        android:gravity="center"
                        android:text="Title"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_3_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/song_list_title_3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="Coin"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toRightOf="@+id/song_title_flag_3_tv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_singer_3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="아이유 (IU)"
                        android:textSize="15sp"
                        android:textColor="@color/grey"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_3_tv"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_number_3_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_3_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_more"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_3_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_play"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toLeftOf="@id/song_list_more_3_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="@id/song_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/song_list_number_4_tv"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="04"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/song_title_flag_4_tv"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_title_button"
                        android:gravity="center"
                        android:text="Title"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_4_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/song_list_title_4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="봄 안녕"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toRightOf="@+id/song_title_flag_4_tv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_singer_4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="아이유(IU)"
                        android:textSize="15sp"
                        android:textColor="@color/grey"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_4_tv"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_number_4_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_4_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_more"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_4_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_play"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toLeftOf="@id/song_list_more_4_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="@id/song_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/song_list_number_5_tv"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="05"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/song_title_flag_5_tv"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_title_button"
                        android:gravity="center"
                        android:text="Title"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_5_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/song_list_title_5_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="Title"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toRightOf="@+id/song_title_flag_5_tv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_singer_5_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="Singer"
                        android:textSize="15sp"
                        android:textColor="@color/grey"
                        app:layout_constraintLeft_toRightOf="@+id/song_list_number_5_tv"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_number_5_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_5_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_more"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_5_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/btn_player_play"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toLeftOf="@id/song_list_more_5_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>