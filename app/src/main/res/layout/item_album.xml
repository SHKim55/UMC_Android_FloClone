<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/album_img_cardview"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/album_img_iv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/img_album_strawberry" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/album_img_play_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintBottom_toBottomOf="@id/album_img_cardview"
        app:layout_constraintRight_toRightOf="@id/album_img_cardview" />

    <TextView
        android:id="@+id/album_song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="strawberry moon"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/album_img_cardview"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:textSize="15sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/album_song_title_tv"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>