<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_background_iv"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_background_4_x_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="포근하게 덮어주는 꿈의 목소리"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/img_album_ex1_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_album_ex2_iv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/img_album_butter" />

    <TextView
        android:id="@+id/text_album_ex1_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butter"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/img_album_ex1_iv"
        app:layout_constraintTop_toTopOf="@id/img_album_ex1_iv"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_album_ex1_musician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방탄소년단"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/img_album_ex1_iv"
        app:layout_constraintBottom_toBottomOf="@id/img_album_ex1_iv"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/img_album_ex2_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_background_iv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/img_album_dynamite" />

    <TextView
        android:id="@+id/text_album_ex2_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamite"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/img_album_ex2_iv"
        app:layout_constraintTop_toTopOf="@id/img_album_ex2_iv"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_album_ex2_musician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방탄소년단"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/img_album_ex2_iv"
        app:layout_constraintBottom_toBottomOf="@id/img_album_ex2_iv"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_music_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 15곡"
        android:textSize="12sp"
        android:letterSpacing="0.2"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_album_ex1_iv"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/text_recent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.11.11"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        app:layout_constraintLeft_toRightOf="@id/text_music_count"
        app:layout_constraintBottom_toTopOf="@id/img_album_ex1_iv"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>